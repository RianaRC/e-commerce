<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<section class="bg0 p-t-104 p-b-116">
    <div class="container">
      <div class="flex-w flex-tr">
        <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">

            <h4 class="mtext-105 cl2 txt-center p-b-30">
              LOG IN
            </h4> 
            <div class="bor8 m-b-20 how-pos4-parent">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "stext-111 cl2 plh3 size-116 p-l-62 p-r-30", placeholder: "Votre email" %>
                <img class="how-pos4 pointer-none" src="/images/icons/icon-email.png" alt="ICON">
            </div>

            <div class="bor8 m-b-20 how-pos4-parent">
                <%= f.password_field :password, autocomplete: "off", class: "stext-111 cl2 plh3 size-116 p-l-62 p-r-30", placeholder: "Mot de passe" %>
                <img class="how-pos4 pointer-none" src="/images/icons/icon-pwd.png" alt="ICON">
            </div>
            
            <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :Se_souvenir_de_moi %>
            </div>
            <% end -%>

            <button class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer" method="submit">
                    Connexion
            </button>
            <br>
            <%= link_to('Pas encore enregistrer?', new_user_registration_path)  %>

        </div>

        <div class="size-210 bor10 flex-w flex-col-m p-lr-93 p-tb-30 p-lr-15-lg w-full-md">
            <h4 class="mtext-105 cl2 txt-center p-b-30">
                WELCOME
              </h4>
          <div class="flex-w w-full p-b-42">
            <span class="fs-18 cl5 txt-center size-211">
              <span class="lnr lnr-map-marker"></span>
            </span>

            <div class="size-212 p-t-2">
              <span class="mtext-110 cl2">
                Address
              </span>

              <p class="stext-115 cl6 size-213 p-t-18">
                Antananarivo, MADAGASCAR
              </p>
            </div>
          </div>

          

          <div class="flex-w w-full">
            <span class="fs-18 cl5 txt-center size-211">
              <span class="lnr lnr-envelope"></span>
            </span>

            <div class="size-212 p-t-2">
              <span class="mtext-110 cl2">
                Sale Support
              </span>

              <p class="stext-115 cl1 size-213 p-t-18">
                test.sayna@gmail.com
              </p>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <% end %>

  <%= render "devise/shared/links" %>