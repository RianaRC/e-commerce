<header class="header-v2">
		<!-- Header desktop -->
		<div class="container-menu-desktop trans-03">
			<div class="wrap-menu-desktop">
				<nav class="limiter-menu-desktop p-l-45">
					
					<!-- Logo desktop -->		
					<%= link_to(root_path,data: { turbolinks: false }) do%>
						<img src="/images/icons/logo-01.png" alt="IMG-LOGO">
					<% end %>


					<!-- Menu desktop -->
					<div class="menu-desktop">
						<ul class="main-menu">
							<li>
								<%= link_to "Accueil", root_path, data: {turbolinks: false}%>
							</li>

							<%if user_signed_in?%>
							<li>
								<%= link_to "Panier", cart_show_path(current_user.id), data: {turbolinks: false} %>
							</li>
							<%end%>

							<li>
								<a href="contact.html">Contact</a>
							</li>
						</ul>
					</div>	

					<!-- Icon header -->
					<div class="wrap-icon-header flex-w flex-r-m h-full">							
						<div class="flex-c-m h-full p-r-25 bor6">
							<%if user_signed_in? && @items%>
							<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="<% 
								n = 0 
								@items.each do |i| 
									n += 1 
								end
								%>
								<%= n %>">
								<i class="zmdi zmdi-shopping-cart"></i>
							</div>
							<%else%>
							<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="0">
								<i class="zmdi zmdi-shopping-cart"></i>
							</div>
							<%end%>
						</div>

						<%if user_signed_in?%>
						<div class="flex-c-m h-full p-lr-19">
							<%= link_to "Mon profil", profil_path(current_user.id), data: {turbolinks: false}%>
						</div>
						<div class="flex-c-m h-full p-lr-19">
							<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-sidebar">
								<%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger my-2 my-sm-0', data: {turbolink: false} %>
							</div>
						</div>
						<%else%>
							<div class="flex-c-m h-full p-r-25 bor6">
								<div class="icon-header-item cl2 hov-cl1 trans-04 p-lr-11 js-show-sidebar">
									<%= link_to 'Se connecter', new_user_session_path, class: "btn btn-outline-success", data: {turbolinks: false}  %> 
								</div>
							</div>
						<%end%>

					</div>
				</nav>
			</div>	
		</div>

		<!-- Header Mobile -->
		<div class="wrap-header-mobile">
			<!-- Logo moblie -->		
			<div class="logo-mobile">
				<%= link_to(root_path,data: { turbolinks: false }) do%>
					<img src="/images/icons/logo-01.png" alt="IMG-LOGO">
				<% end %>
			</div>

			<!-- Icon header -->
			<div class="wrap-icon-header flex-w flex-r-m h-full m-r-15">
				<div class="flex-c-m h-full p-r-5">
					<%if user_signed_in? && @items%>
					<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="<% 
						n = 0 
						@items.each do |i| 
							n += 1 
						end
						%>
						<%= n %>">
						<i class="zmdi zmdi-shopping-cart"></i>
					</div>
					<%else%>
					<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="0">
						<i class="zmdi zmdi-shopping-cart"></i>
					</div>
					<%end%>
				</div>
			</div>

			<!-- Button show menu -->
			<div class="btn-show-menu-mobile hamburger hamburger--squeeze">
				<span class="hamburger-box">
					<span class="hamburger-inner"></span>
				</span>
			</div>
		</div>


		<!-- Menu Mobile -->
		<div class="menu-mobile">
			<ul class="main-menu-m">
				<li>
					<%= link_to "Accueil", root_path, data: {turbolinks: false}%>
				</li>

				<%if user_signed_in?%>
				<li>
					<%= link_to "Panier", cart_show_path(current_user.id), data: {turbolinks: false} %>
				</li>
				<%end%>

				<li>
					<a href="contact.html">Contact</a>
				</li>
				<%if user_signed_in?%>
				<li>
					<%= link_to "Mon profil", profil_path(current_user.id), data: {turbolinks: false}%>
				</li>
				<%end%>
				<%if user_signed_in?%>
				<li>
					<%= link_to "Déconnexion", destroy_user_session_path, method: :delete, class: 'btn ml-3 btn-danger my-2 my-sm-0', data: {turbolink: false} %>
				</li>
				<%else%>
				<li>
					<%= link_to('Se connecter', new_user_session_path, class: "btn btn-success", data: {turbolinks: false})  %>
				</li>
				<%end%>
			</ul>
		</div>

		<!-- Modal Search -->
		<div class="modal-search-header flex-c-m trans-04 js-hide-modal-search">
			<button class="flex-c-m btn-hide-modal-search trans-04">
				<i class="zmdi zmdi-close"></i>
			</button>
		</div>
	</header>
